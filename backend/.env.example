# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/healthcare

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CHAT_RATE_LIMIT_MAX=20

# LLM API Configuration (choose one or both)
# Remote API (OpenAI or compatible)
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Local LLM (optional - for on-device processing)
LOCAL_LLM_ENABLED=false
LOCAL_LLM_ENDPOINT=http://localhost:8080/v1/chat/completions

# Moderation
MODERATION_ENABLED=true
MODERATION_STRICT_MODE=false

# Logging
LOG_LEVEL=debug
LOG_PII=false
